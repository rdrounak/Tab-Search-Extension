{
  "manifest_version": 3,
  "name": "Tab Search Extension",
  "version": "1.0",
  "description": "Search through opened tabs",
  "icons": {
    "48": "icon.png"
  },
  "license": "MIT",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": ["tabs"],
  "commands": {
    "toggle-extension": {
      "suggested_key": {
        "default": "Ctrl+Shift+L"
      },
      "description": "Toggle the Tab Search Extension"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
